<div class="main">
    <div class="dark-bg"></div>

    <div class="main-container">
        <div class="container">
            <div class="container-top">
                <p>Before manage roster you need to be logged in.</p>
            </div>
            <div class="container-bottom">
                <div class="login-button">
                    <button class="btn" id="login-button" type="button" {{on 'click' this.visibilityLogin}}>Log In</button>
                </div>
                <div class="signup-text">
                    <p>Don't have an account yet? <a href="/sign-up">Sign Up</a></p>
                </div>
            </div>
        </div>
        <div class="form-container" data-visible="false">
            <div class="form-popup" >
                <form class="input-fields" action="/login.hbs">
                    <h2>Login</h2>

                    <label for="username"></label>
                    <input type="text" placeholder="Enter Username" id="username" name="username" required>

                    <label for="psw"></label>
                    <input type="password" placeholder="Enter Password" id="psw" name="psw" required>

                    <button type="submit" class="btn login">Login</button>
                    <button type="button" class="btn cancel" {{on 'click' this.visibilityLogin}}>Close</button>
                </form>
            </div>
        </div>

    </div>
</div>