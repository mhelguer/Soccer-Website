<div class="main">
  <div class="standings">
    <div class="header">
      <div class="table-title">
        <h2>{{@title}}</h2>
      </div>      
      <div class="dropdown">
        {{!-- TODO: make functions for GETting div1 and div2 data for each button --}}
        <select id="dropdownMenu" onchange={{action 'changeData' value="target.value" }}>
          <option value="1">Division 1</option>
          <option value="2">Division 2</option>
        </select>
      </div>
    </div>

    <table class="teams-table">
      <thead class="teams-table-head">
        <tr>
          {{#each this.headers as |header|}}
            <th>{{header}}</th>
          {{/each}}
        </tr>
      </thead>
      <tbody class="teams-table-body">
        {{#each this.data.data as |team|}}
          <tr>
            <td>{{team.rank}}</td>
            <td>{{team.name}}</td>
            <td>{{team.games_played}}</td>
            <td>{{team.wins}}</td>
            <td>{{team.draws}}</td>
            <td>{{team.losses}}</td>
            <td>{{team.goals_scored}}</td>
            <td>{{team.goals_conceded}}</td>
            <td>{{team.goal_differential}}</td>
            <td>{{team.points}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>