<div class="title-menu">
  <h2>{{@title}}</h2>
  {{log this.data}}
  {{#if this.data}}
    hi
    {{this.data.data}}
  {{else}}
    bye
  {{/if}}
  {{#if this.data}}
  hi2
  {{log this.data}}
    <ul>
      {{#each this.data as |dat|}}
      <li>{{dat.name}}</li>
      {{/each}}
    </ul>
  {{else}}
    bye2
  {{/if}}
</div>
<table>
  <thead>
    <tr>
      {{#each this.headers as |header|}}
        <th>{{header}}</th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    {{#each this.data.data as |team|}}
      <tr>
        <td>{{team.rank}}</td>
        <td>{{team.name}}</td>
        <td>{{team.games_played}}</td>
        <td>{{team.wins}}</td>
        <td>{{team.draws}}</td>
        <td>{{team.losses}}</td>
        <td>{{team.goals_scored}}</td>
        <td>{{team.goals_conceded}}</td>
        <td>{{team.goal_differential}}</td>
        <td>{{team.points}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<button {{action 'changeData' }}>Change Data</button>
